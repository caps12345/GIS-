<Window x:Class="WeatherApp_FGH.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WeatherApp_FGH"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:esri="clr-namespace:Esri.ArcGISRuntime.UI.Controls;assembly=Esri.ArcGISRuntime.WPF"
        Title="气象系统 (F1+G2+H1+H2)" Height="750" Width="1200">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="esri:Callout">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="城市列表 (F1)" Grid.Column="0" Margin="5">
            <ListBox x:Name="CityListBox"
                     ItemsSource="{Binding CityNames}" 
                     SelectedItem="{Binding SelectedCity}" 
                     SelectionChanged="CityListBox_SelectionChanged"
                     FontSize="14"/>
        </GroupBox>

        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#f0f0f0" Padding="5" Margin="0,0,0,5" BorderBrush="LightGray" BorderThickness="1">
                <WrapPanel Orientation="Horizontal">
                    <TextBlock Text="平均温 >" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox x:Name="TempInput" Width="40" Text="20" VerticalContentAlignment="Center"/>
                    <TextBlock Text="℃" VerticalAlignment="Center" Margin="2,0"/>
                    <Button Content="查询并高亮" Margin="5,0" Padding="5,2" Click="AttributeQuery_Click"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                    <TextBlock Text="绘图:" VerticalAlignment="Center" Margin="5,0"/>
                    <Button x:Name="BtnDrawPoint" Content="画点" Margin="2,0" Padding="5,2" Click="DrawPoint_Click"/>
                    <Button x:Name="BtnDrawLine" Content="画线" Margin="2,0" Padding="5,2" Click="DrawLine_Click"/>
                    <Button x:Name="BtnDrawPolygon" Content="画面" Margin="2,0" Padding="5,2" Click="DrawPolygon_Click"/>
                    <Button Content="✅ 完成" Margin="5,0" Padding="5,2" Background="#E0FFE0" Click="CompleteDraw_Click"/>
                    <TextBlock Text="缓冲:" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox x:Name="BufferInput" Width="40" Text="50" VerticalContentAlignment="Center"/>
                    <TextBlock Text="km" VerticalAlignment="Center" Margin="2,0"/>
                    <Button Content="分析" x:Name="BtnBuffer" IsEnabled="False" Margin="5,0" Padding="5,2" Click="BufferAnalysis_Click"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                    <Button Content="清除" Click="Clear_Click" Margin="5,0" Padding="5,2" Background="#FFCCCC"/>
                </WrapPanel>
            </Border>

            <GroupBox Header="地图展示 (H1+H2)" Grid.Row="1">
                <esri:MapView x:Name="MyMapView" 
                              Map="{Binding MyMap}" 
                              GeoViewTapped="MyMapView_GeoViewTapped" />
            </GroupBox>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="温度趋势 (交互折线)" Grid.Column="0" Margin="0,5,5,0">
                    <lvc:CartesianChart Series="{Binding TemperatureSeries}" LegendLocation="Top">
                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip SelectionMode="SharedYValues"/>
                        </lvc:CartesianChart.DataTooltip>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="日期" Labels="{Binding DateLabels}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                                <lvc:Axis.LabelsRotation>-45</lvc:Axis.LabelsRotation>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="温度 (℃)" LabelFormatter="{Binding YFormatter}"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </GroupBox>

                <GroupBox Header="平均气温 (静态柱状)" Grid.Column="1" Margin="5,5,0,0">
                    <lvc:CartesianChart Series="{Binding AvgTempSeries}" LegendLocation="None">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="日期" Labels="{Binding DateLabels}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="0"/>
                                </lvc:Axis.Separator>
                                <lvc:Axis.LabelsRotation>-45</lvc:Axis.LabelsRotation>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="平均温 (℃)" LabelFormatter="{Binding YFormatter}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator StrokeDashArray="2"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>